{% extends 'admin_base.html.twig' %}

{% block title %}Yeni Kategori{% endblock %}

{% block customScript %}
    <script>
        let pageVue = new Vue({
            delimiters: ['${', '}'],
            el: '#page',
            data: {},
            methods: {},
            computed: {},
            watch: {},
            created() {
                let _this = this;
                $(document).ready(function () {
                    $(".select2").select2();
                    let datas=[];
                    $.each(_this.selectedCategory, function (index, value) {
                        datas.push(value.id);
                    });
                    $("#product_category").val(datas).trigger('change');
                })
            }
        });
    </script>
{% endblock %}
